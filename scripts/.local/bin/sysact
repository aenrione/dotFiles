#!/bin/sh

# A dmenu wrapper script for system functions.
export WM="dwm"
case "$(readlink -f /sbin/init)" in
    *systemd*) ctl='systemctl' ;;
    *) ctl='loginctl' ;;
esac
before_sleep_cmd="playerctl -l | grep -q . && playerctl pause -a || true"

wmpid(){ # This function is needed if there are multiple instances of the window manager.
    pgrep -x "$WM"
}

action=$(printf "ğŸ”’ lock\nğŸšª leave $WM\nâ™» renew $WM\nğŸ» hibernate\nğŸ”ƒ reboot\nğŸ–¥shutdown\nğŸ’¤ sleep\nğŸ“º display off" | dmenu -i -p 'Action: ')
echo "Selected action: $action"  # Debug statement

case "$action" in
    'ğŸ”’ lock') slock ;;
    "ğŸšª leave $WM") pid=$(wmpid); echo "Killing PID: $pid"; kill -TERM "$pid" ;;
    "â™» renew $WM") pid=$(wmpid); echo "Reloading PID: $pid"; kill -HUP "$pid" ;;
    'ğŸ» hibernate') slock $ctl hibernate -i ;;
    'ğŸ’¤ sleep') $before_sleep_cmd && slock $ctl suspend -i ;;
    'ğŸ”ƒ reboot') $ctl reboot -i ;;
    'ğŸ–¥shutdown') $ctl poweroff -i ;;
    'ğŸ“º display off') xset dpms force off ;;
    *) exit 1 ;;
esac

